# beacon-admin/.env.local - CREATE THIS FILE

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:5000/api"
NEXT_PUBLIC_APP_ENV="development"

# Authentication Configuration
NEXTAUTH_SECRET="your-nextauth-secret-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# App Configuration
NEXT_PUBLIC_APP_NAME="The Beacon Centre Admin"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# File Upload Configuration (for client-side uploads)
NEXT_PUBLIC_MAX_FILE_SIZE=104857600
NEXT_PUBLIC_ALLOWED_IMAGE_TYPES="image/jpeg,image/png,image/webp"
NEXT_PUBLIC_ALLOWED_AUDIO_TYPES="audio/mpeg,audio/wav,audio/mp4,audio/aac"

# Cloudinary Configuration (if using client-side uploads)
# NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
# NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="beacon_admin_preset"

# Analytics Configuration
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=""
NEXT_PUBLIC_HOTJAR_ID=""

# Development Configuration
NEXT_PUBLIC_DEBUG_MODE="true"
NEXT_PUBLIC_LOG_LEVEL="debug"

# Production Configuration (update for production)
# NEXT_PUBLIC_API_URL="https://your-production-api.com/api"
# NEXT_PUBLIC_APP_ENV="production"
# NEXTAUTH_URL="https://your-admin-dashboard.com"
# NEXT_PUBLIC_DEBUG_MODE="false"
# NEXT_PUBLIC_LOG_LEVEL="error"
