# Database
# Connect to Supabase via connection pooling
DATABASE_URL="postgresql://postgres.connestionstuf:password@aws-0-eu-west-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection to the database. Used for migrations
DIRECT_URL="postgresql://postgres.connestionstuf:password@aws-0-eu-west-1.pooler.supabase.com:5432/postgres"

# Server
PORT=5000
NODE_ENV=development

# JWT
JWT_SECRET="beacon-centre-super-secret-jwt-key-change-this-in-production"
JWT_REFRESH_SECRET="beacon-centre-super-secret-refresh-key-change-this-in-production"
JWT_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Cloudinary
CLOUDINARY_CLOUD_NAME=xxxxxxxxxxxxxxxxxxxxxxxxxxx
CLOUDINARY_API_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLOUDINARY_API_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLOUDINARY_UPLOAD_PRESET=beacon_admin_preset

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,exp://

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload
MAX_FILE_SIZE_MB=100