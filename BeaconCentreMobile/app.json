{
  "expo": {
    "name": "The Beacon Centre",
    "slug": "beacon-centre",
    "description": "Daily devotionals, sermons, and church announcements from The Beacon Centre",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "platforms": [
      "ios",
      "android"
    ],
    "splash": {
      "backgroundColor": "#41BBAC"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.thebeaconcentre.mobile",
      "buildNumber": "1",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio",
          "background-processing"
        ],
        "NSCameraUsageDescription": "This app does not use the camera.",
        "NSMicrophoneUsageDescription": "This app does not use the microphone.",
        "NSUserTrackingUsageDescription": "This app uses anonymous analytics to improve user experience."
      },
      "associatedDomains": [
        "applinks:thebeaconcentre.org"
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#41BBAC"
      },
      "package": "org.thebeaconcentre.mobile",
      "versionCode": 1,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.WAKE_LOCK",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.RECORD_AUDIO",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "https",
              "host": "thebeaconcentre.org"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#41BBAC",
          "sounds": [
            "./assets/notification-sound.wav"
          ]
        }
      ],
      "expo-av",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "apiUrl": "https://your-api-url.com/api",
      "environment": "production",
      "eas": {
        "projectId": "ec0ef960-07ed-4514-9a79-d3662d515849"
      }
    },
    "owner": "bisina"
  }
}
