# Mobile App Environment Variables

# API Configuration
# For development, use local backend
EXPO_PUBLIC_API_URL=http://localhost:5000/api

# For production, use your deployed backend
# EXPO_PUBLIC_API_URL=https://your-backend-domain.com/api

# App Configuration
EXPO_PUBLIC_APP_NAME="The Beacon Centre"
EXPO_PUBLIC_APP_VERSION=1.0.0
EXPO_PUBLIC_ENVIRONMENT=development

# Analytics Configuration
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ANALYTICS_DEVICE_ID_PREFIX=beacon_mobile

# Cloudinary Configuration (for image optimization)
EXPO_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
EXPO_PUBLIC_CLOUDINARY_BASE_URL=https://res.cloudinary.com

# YouTube API (for video sermon metadata)
EXPO_PUBLIC_YOUTUBE_API_KEY=your-youtube-api-key
# Note: Same API key can be used for both admin dashboard and mobile app
# Get your API key from: https://console.developers.google.com/

# Feature Flags
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_DOWNLOADS=true
EXPO_PUBLIC_ENABLE_PUSH_NOTIFICATIONS=true
EXPO_PUBLIC_ENABLE_SHARING=true

# Cache Configuration
EXPO_PUBLIC_CACHE_DURATION_MS=3600000
EXPO_PUBLIC_OFFLINE_CACHE_SIZE_MB=50

# Network Configuration
EXPO_PUBLIC_API_TIMEOUT_MS=30000
EXPO_PUBLIC_RETRY_ATTEMPTS=3
EXPO_PUBLIC_RETRY_DELAY_MS=1000

# Audio Configuration
EXPO_PUBLIC_AUDIO_QUALITY=medium
EXPO_PUBLIC_AUTO_DOWNLOAD_WIFI_ONLY=true

# Development Configuration
EXPO_PUBLIC_ENABLE_DEBUG_LOGS=true
EXPO_PUBLIC_MOCK_API_DELAY_MS=1000